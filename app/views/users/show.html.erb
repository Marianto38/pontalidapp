<%# User Banner %>
<div class="ps-3 ps-md-5 pt-4 pb-3 mb-3 text-white bg-secondary shadow-sm rounded-4">
  <div class="d-flex align-items-end">
    <% if @user.photo.attached? %>
    <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
    <img src="https://t4.ftcdn.net/jpg/02/29/75/83/360_F_229758328_7x8jwCwjtBMmC6rgFzLFhZoEpLobB6L8.jpg" alt="">
    <% end %>
      <%# image_tag get_avatar_url, class: "avatar avatar-xxl img-fluid"%>
      <div class="px-3 py-3">
        <% if current_user.first_name %>
          <p class="m-0 ms-1 fs-4 fw-bold"><%= @user.first_name %></p>

        <% else %>
          <p class="m-0 ms-1 fs-4 fw-bold"><%= @user.email %></p>
